<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ai.assistance.custard.terminal" >

    <uses-sdk android:minSdkVersion="26" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application>

        <!-- Ubuntu File System Documents Provider for SAF -->
        <provider
            android:name="com.ai.assistance.custard.terminal.provider.UbuntuDocumentsProvider"
            android:authorities="com.ai.assistance.custard.documents.ubuntu"
            android:exported="true"
            android:grantUriPermissions="true"
            android:permission="android.permission.MANAGE_DOCUMENTS" >
            <intent-filter>
                <action android:name="android.content.action.DOCUMENTS_PROVIDER" />
            </intent-filter>
        </provider>

        <service
            android:name="com.ai.assistance.custard.terminal.service.TerminalService"
            android:enabled="true"
            android:exported="false" />
    </application>

</manifest>